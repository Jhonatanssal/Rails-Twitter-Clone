<!DOCTYPE html>
<html>
  <head>
    <title>TwitterRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:alert] %>
      <div class=" notificacion is_danger global-notification">
        <p class="alert bg-danger text-center text-white"><%= alert %></p>
      </div>
    <% end %>
    <nav class="navbar is-info">
      <div class=" navbar-brand">
        <%= link_to root_path, class: 'navbar-item' do %>
          <h5 class=" title is-5">Twiitter</h5>
        <% end %>
        <div class="navbar-burger burger">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </div>

      <div id="navbarExample" class="navbar-menu">
        <div class="navbar-end">
          <div class="field is-grouped d-flex align-items-center">
            <p class="control">
              <%= link_to 'New Tweet', root_path, class: "button is-info is-inverted" %>
            </p>
            <% if user_signed_in? %>
              <p class="control">
                <%= link_to current_user.name, edit_user_registration_path, class: 'button is-info' %>
              </p>
              <p class="mt-3">
                <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'button is-danger' %>
              </p>
            <% else %>
              <p class="control">
                <%= link_to 'Sign In', new_user_session_path, class: 'btn btn-primary' %>
              </p>
              <p class="control mt-3">
                <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary' %>
              </p>
            <% end %>
          </div>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
