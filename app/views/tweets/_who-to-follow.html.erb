<div class="column">
  <nav class="panel">
    <p class="panel-heading">Who to Follow</p>
    <% @tweets.each do |tweet| %>
    <div class="panel-block">
      <article class="media">
        <div class="media-left">
          <figure class="image is-32x32">
          <%= link_to gravatar_image_tag(tweet.user.email, size: 64, alt: tweet.user.name) %>
          </figure>
        </div>
          <div class="media-content">
            <div class="content">
              <p>
                <strong><%= link_to tweet.user.name, edit_user_registration_path %> </strong><br>
                <small>@<%= tweet.user.username %></small>
              </p>
            </div>
          </div>
      </article>
    </div>
    <% end %>
  </nav>
</div>